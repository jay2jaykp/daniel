generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id       Int        @id @default(autoincrement())
    username String     @unique
    password String
    Messages Messages[]
}

model Channel {
    id       Int        @id @default(autoincrement())
    name     String
    Messages Messages[]
}

model Messages {
    id          Int      @id @default(autoincrement())
    content     String
    timestap    DateTime @default(now())
    user_ref    User     @relation(fields: [user_id], references: [id])
    user_id     Int
    channel_ref Channel  @relation(fields: [channel_id], references: [id])
    channel_id  Int
}
